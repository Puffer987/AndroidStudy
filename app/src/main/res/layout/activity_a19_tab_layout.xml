<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.A19TabLayout">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/i19_tab1"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/i19_tab2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabMode="scrollable" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/i19_tab3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabSelectedTextColor="#8BC34A"
        app:tabTextColor="#FF5722" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/i19_tab4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabIndicatorColor="#F44336"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="10dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/i19_tab5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabBackground="@color/colorSymbolLightBtnPressed"
        app:tabGravity="center"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/i19_tab6"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/i19_frame"/>

</LinearLayout>