<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".activity.A22Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/i22_normal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="normal"
            android:text="普通" />

        <Button
            android:id="@+id/i22_multi_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="multiBtn"
            android:text="多按钮" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="listDialog"
            android:text="列表" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="selDialog"
            android:text="单选" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="multiChoice"
            android:text="多选" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="waiting"
            android:text="等待" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="progress"
            android:text="进度条" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="input"
            android:text="输入" />

    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="initDialog"
            android:text="初始化操作" />

    </LinearLayout>

</LinearLayout>